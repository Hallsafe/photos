
<div class="row">
  <div class="span6">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: "well", :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>Edit User</legend>
  <%= f.input :email %>
  

  <%= f.input :password, :hint => "(leave blank if you don't want to change it)" %>

  <%= f.input :password_confirmation %>

  <%= f.input :current_password, :hint => "(we need your current password to confirm your changes)" %>

  <div><%= f.button :submit, "Update" %></div>
</fieldset>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
</div>
</div>